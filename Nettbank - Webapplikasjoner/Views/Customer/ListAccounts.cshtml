@model IEnumerable<Nettbank___Webapplikasjoner.Models.Account>

@{
    ViewBag.Title = "ListAccounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListAccounts</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.accountNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.balance)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.accountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.balance)
            </td>
            <td>
                @Html.ActionLink(linkText: "Betalinger",  actionName: "ListTransactions", controllerName: "Transaction", routeValues: new { /* id=item.PrimaryKey */ }, htmlAttributes: null) 
            </td>
        </tr>
    }

</table>