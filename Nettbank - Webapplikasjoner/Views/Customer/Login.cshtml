
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row spacer">
        <div class="col-md-6">hei</div>
        <div class="col-md-6">

            <h2 class="form-signin-heading">Logg inn</h2>

            <form class="form-horizontal" action="/Customer/ValidateUser" method="post">
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPersonnumber" placeholder="Personnummer" name="personnumber">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputPassword" placeholder="Passord" name="Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputBankID" placeholder="BankID" name="BankID">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Logg inn!" />
                    </div>
                </div>
            </form>

        </div>
    </div>
</div> 