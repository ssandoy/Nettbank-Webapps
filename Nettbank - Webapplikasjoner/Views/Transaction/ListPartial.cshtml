@model Nettbank___Webapplikasjoner.Models.Transaction

<div class="panel panel-default">
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.transactionId)</th>
                <th>@Html.DisplayNameFor(model => model.amount)</th>
                <th>@Html.DisplayNameFor(model => model.fromAccountNumber)</th>
                <th>@Html.DisplayNameFor(model => model.toAccountNumber)</th>
                <th>@Html.DisplayNameFor(model => model.timeToBeTransfered)</th>
                <th>@Html.DisplayNameFor(model => model.timeTransfered)</th>
                <th>@Html.DisplayNameFor(model => model.comment)</th>
            </tr>
            <tr>
                <td>@Model.transactionId</td>
                <td>@Model.amount</td>
                <td>@Model.fromAccountNumber</td>
                <td>@Model.toAccountNumber</td>
                <td>@Model.timeToBeTransfered</td>
                <td>@Model.timeTransfered</td>
                <td>@Model.comment</td>
            </tr>
        </table>
    </div>
    <div class="panel-footer clearfix">
        <div class="pull-left">
            <a href="#deleteModal" class="btn btn-large btn-danger" id="deleteButton"
               data-navn="Beløp: @Model.amount fra konto: @Model.fromAccountNumber til konto: @Model.toAccountNumber kommentar: @Model.comment"
               data-id="@Model.transactionId" data-toggle="modal" data-deleteModal="true">SLETT</a>
            @Html.ActionLink(linkText: "ENDRE", actionName: "UpdateTransaction", controllerName: "Transaction", routeValues: new {  id=Model.transactionId  }, htmlAttributes: new {@class= "btn btn-large btn-info" })
        </div>
    </div>
</div>