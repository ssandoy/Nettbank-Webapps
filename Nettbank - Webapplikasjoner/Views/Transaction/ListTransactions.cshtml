@model List<Nettbank___Webapplikasjoner.Models.Transaction>

@{
    ViewBag.Title = "Betalingsoversikt";
}

<h2>Betalingsoversikt</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model[0].transactionId)</th>
        <th>@Html.DisplayNameFor(model => model[0].fromAccountNumber)</th>
        <th>@Html.DisplayNameFor(model => model[0].toAccountNumber)</th>
        <th>@Html.DisplayNameFor(model => model[0].amount)</th>
        <th>@Html.DisplayNameFor(model => model[0].timeTransfered)</th>
        <th>@Html.DisplayNameFor(model => model[0].timeToBeTransfered)</th>
        <th>@Html.DisplayNameFor(model => model[0].comment)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.transactionId)</td>
        <td>@Html.DisplayFor(modelItem => item.fromAccountNumber)</td>
        <td>@Html.DisplayFor(modelItem => item.toAccountNumber)</td>
        <td>@Html.DisplayFor(modelItem => item.amount)</td>
        <td>@Html.DisplayFor(modelItem => item.timeTransfered)</td>
        <td>@Html.DisplayFor(modelItem => item.timeToBeTransfered)</td>
        <td>@Html.DisplayFor(modelItem => item.comment)</td>
        <td>
            @Html.ActionLink("Endre", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Slett", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>