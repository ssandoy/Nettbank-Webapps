            @Html.DisplayFor(modelItem => item.executed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.timeToBeTransfered)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.timeTransfered)
        </td>
